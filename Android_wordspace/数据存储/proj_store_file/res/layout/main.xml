<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="记事本" />
	<EditText android:id="@+id/text" android:layout_width="fill_parent"
		android:layout_height="300dp" android:textColor="#E42E2C" android:gravity="left"
		android:background="@drawable/http_imgload2"/>
		
		<LinearLayout android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
		>
		<Button android:id="@+id/save"
				android:text="保存"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
		/>
		<Button android:id="@+id/show"
				android:text="显示"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
		/>
		</LinearLayout>
</LinearLayout>
