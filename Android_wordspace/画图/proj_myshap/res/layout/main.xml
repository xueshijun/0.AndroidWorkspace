<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
	<Button android:id="@+id/line" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="横线"/>
	<Button android:id="@+id/squre" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="方块"/>
	<Button android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="文本"/>
	<Button android:id="@+id/auto" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="自动变化"/>
	</LinearLayout>
</LinearLayout>
