<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<EditText android:id="@+id/txt_input" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="right" android:text="@string/zero" />
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<Button  android:id="@+id/but1" android:layout_width="60dp" android:layout_height="40dp" android:text="1" android:textSize="20sp"  />
        <Button  android:id="@+id/but2" android:layout_width="60dp" android:layout_height="40dp" android:text="2" android:textSize="20sp" />
        <Button  android:id="@+id/but3" android:layout_width="60dp" android:layout_height="40dp" android:text="3" android:textSize="20sp" />
        <Button  android:id="@+id/but4" android:layout_width="60dp" android:layout_height="40dp" android:text="+" android:textSize="20sp" />

	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<Button  android:id="@+id/but5" android:layout_width="60dp" android:layout_height="40dp" android:text="4" android:textSize="20sp"  />
        <Button  android:id="@+id/but6" android:layout_width="60dp" android:layout_height="40dp" android:text="5" android:textSize="20sp" />
        <Button  android:id="@+id/but7" android:layout_width="60dp" android:layout_height="40dp" android:text="6" android:textSize="20sp" />
        <Button  android:id="@+id/but8" android:layout_width="60dp" android:layout_height="40dp" android:text="-" android:textSize="20sp" />

	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="horizontal" >
		<Button  android:id="@+id/but9" android:layout_width="60dp" android:layout_height="40dp" android:text="7" android:textSize="20sp"  />
        <Button  android:id="@+id/but10" android:layout_width="60dp" android:layout_height="40dp" android:text="8" android:textSize="20sp" />
        <Button  android:id="@+id/but11" android:layout_width="60dp" android:layout_height="40dp" android:text="9" android:textSize="20sp" />
        <Button  android:id="@+id/but12" android:layout_width="60dp" android:layout_height="40dp" android:text="*" android:textSize="20sp" />

	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<Button  android:id="@+id/but13" android:layout_width="60dp" android:layout_height="40dp" android:text="0" android:textSize="20sp"  />
        <Button  android:id="@+id/but14" android:layout_width="60dp" android:layout_height="40dp" android:text="c" android:textSize="20sp" />
        <Button  android:id="@+id/but15" android:layout_width="60dp" android:layout_height="40dp" android:text="=" android:textSize="20sp" />
        <Button  android:id="@+id/but16" android:layout_width="60dp" android:layout_height="40dp" android:text="/" android:textSize="20sp" />
        <Button  android:id="@+id/but17" android:layout_width="60dp" android:layout_height="40dp" android:text="." android:textSize="20sp" />
	</LinearLayout>
</LinearLayout>
